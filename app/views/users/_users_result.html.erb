<% if users.present? %>
	<% users.each do |user| %>
		<%= link_to user_path(user), class: "no-text-decoration normal-color" do %>
			<div class="search-result-item"><%= image_tag user.avatar_thumbnail, class: "post-author-icon" %><%= user.name %></div>
		<% end %>
	<% end %>
<% else %>
	<div class="p-3">
		No results found.
	</div>
<% end %>
